{
  "name": "prayer-debt-kaza",
  "version": "1.0.0",
  "description": "Telegram Mini App for calculating missed prayers (Kaza) with Hanafi methodology",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web & npm run dev --prefix .",
    "build": "tsc",
    "build:web": "npm run build --workspace=web",
    "build:all": "npm run build && npm run build:web",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^4.19.2",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.7",
    "@types/node": "^22.7.4",
    "@types/uuid": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
